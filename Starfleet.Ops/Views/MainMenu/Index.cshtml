@model Starfleet.Ops.Controllers.MainMenuViewModel

@{
    ViewBag.Title = "Main Menu";
    Layout = "_Layout";
}
<style>
    .main-menu {
        font-family: monospace;
    }
</style>

<div class="main-menu">
<h1>Starfleet Ops</h1>
<h5>Main Menu</h5>

    <ul>
       
            @for (int i = 0; i < Model.OpenGames.Count(); i++)
            {
                <li>
                    <a href="@Url.Action("Index", "StrategicView", new {id = Model.OpenGames[i].Id})">Join Game #@(i+1): @Model.OpenGames[i].Name</a>
                </li>
            }

        
        <li>
            <a href="@Url.Action("Index", "GameStateSpecificationBuilder")">New Game 
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index", "FileBrowser")">
                Rule File Browser
            </a>
        </li>
    </ul>
</div>