@model Starfleet.Ops.Controllers.GameStateSpecificationViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}




@using (Html.BeginForm())
{
    for (int i = 0; i < Model.SelectedShips.Count; i++)
    {
        <div class="row">
            <div class="col-md-6">
                @Html.DropDownListFor(x => Model.SelectedShips[i].Code, Model.AllShips)
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(x => x.SelectedShips[i].Name)
            </div>
           
        </div>
    }
    <input id="refreshButton" type="submit" style="display: none;"/>


    <input type="button" value="Begin Game" id="beginGame"/>
}



@section Scripts
{
    <script>
        $("select").change(function() { $("form").submit() });
        $("#beginGame").click(function () {
            $("form").attr("action",'@Url.Action("BeginGame")');
            $("form").submit();
        });
        
    </script>
}
